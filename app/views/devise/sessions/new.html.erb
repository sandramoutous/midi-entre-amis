<div class="col-12">
  <div class="row col-lg-10 mx-auto container-devise">
    <div class="col-lg-6 banner-login-img banner-devise-img">
      <h4 class="text-white banner-text">Connectez-vous pour retrouver vos restaurants préférés !</h4>
    </div>
    <div class="col-lg-6 bg-light banner-form">
      <h2>Se connecter</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field-form">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field-form">
          <%= f.label 'Mot de passe' %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field-form">
            <%= f.check_box :remember_me %>
            <%= f.label 'Se souvenir de moi' %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit 'Enregistrer', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


